<article class='post'>
  <div class='title'>
    <a href='/post/{{id}}' target='_blank'>{{title}}</a>
    <span style='float:right'>
      Posted by
      {{user.username}}
      on
      {{format_date created_at}}
    </span>
  </div>
  <div>
    <p class='description'>{{{format_break post_text}}}</p>
  </div>
  <div class='meta'>
    <a href='/post/{{id}}'>{{comments.length}}
      {{format_plural 'comment' comments.length}}</a>
  </div>
</article>